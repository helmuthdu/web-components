{
  "name": "@web-components/monorepo",
  "version": "1.0.0",
  "type": "module",
  "description": "Web Components",
  "scripts": {
    "build": "npm run build --ws",
    "build:storybook": "storybook build",
    "fix": "concurrently -c \"auto\" \"npm:fix:js\" \"npm:fix:css\"",
    "fix:css": "prettier \"packages/**/*.{css,scss}\" --write & stylelint --fix \"strict\" packages/**/*.{css,scss}",
    "fix:js": "eslint --fix",
    "lint": "concurrently -c \"auto\" \"npm:lint:js\" \"npm:lint:css\"",
    "lint:css": "stylelint packages/**/*.{css,scss}",
    "lint:js": "eslint",
    "storybook": "storybook dev -p 6006",
    "test": "npm run test --ws"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helmuthdu/web-components.git"
  },
  "keywords": [
    "web-components"
  ],
  "author": "Helmuth Saatkamp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/helmuthdu/web-components/issues"
  },
  "homepage": "https://github.com/helmuthdu/web-components#readme",
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@eslint/js": "^9.39.2",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/html-vite": "^10.1.11",
    "@types/jsdom": "^27.0.0",
    "@vitest/browser": "^4.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^5.2.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^10.1.11",
    "jsdom": "^27.4.0",
    "lefthook": "^2.0.13",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "storybook": "^10.1.11",
    "stylelint": "^16.26.1",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-use-logical-spec": "^5.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "vitest-github-actions-reporter": "^0.11.1",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16"
  },
  "engines": {
    "node": ">= 20.0.0",
    "npm": ">= 10.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
