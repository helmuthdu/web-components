{
  "name": "@web-components/monorepo",
  "version": "1.0.0",
  "type": "module",
  "description": "Web Components",
  "scripts": {
    "build": "npm run build --ws",
    "build:storybook": "storybook build",
    "fix": "concurrently -c \"auto\" \"npm:fix:js\" \"npm:fix:css\"",
    "fix:css": "stylelint --fix \"strict\" packages/**/*.{css,scss}",
    "fix:js": "eslint --fix",
    "lint": "concurrently -c \"auto\" \"npm:lint:js\" \"npm:lint:css\"",
    "lint:css": "stylelint packages/**/*.{css,scss}",
    "lint:js": "eslint",
    "storybook": "storybook dev -p 6006",
    "test": "npm run test --ws"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helmuthdu/web-components.git"
  },
  "keywords": [
    "web-components"
  ],
  "author": "Helmuth Saatkamp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/helmuthdu/web-components/issues"
  },
  "homepage": "https://github.com/helmuthdu/web-components#readme",
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@eslint/js": "^9.19.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@storybook/addon-essentials": "^8.5.3",
    "@storybook/addon-interactions": "^8.5.3",
    "@storybook/blocks": "^8.5.3",
    "@storybook/html": "^8.5.3",
    "@storybook/html-vite": "^8.5.3",
    "@storybook/test": "^8.5.3",
    "@types/jsdom": "^21.1.7",
    "@vitest/browser": "^3.0.5",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-perfectionist": "^4.8.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-storybook": "^0.11.2",
    "jsdom": "^26.0.0",
    "lefthook": "^1.10.10",
    "playwright": "^1.50.1",
    "prettier": "^3.4.2",
    "storybook": "^8.5.3",
    "stylelint": "^16.14.1",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-use-logical-spec": "^5.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vite": "^6.0.11",
    "vitest": "^3.0.5",
    "vitest-github-actions-reporter": "^0.11.1"
  },
  "engines": {
    "node": ">= 20.0.0",
    "npm": ">= 10.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
